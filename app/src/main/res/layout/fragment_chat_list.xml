<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

        <ProgressBar
            android:id="@+id/progressCircle"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:id="@+id/noConversationsView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:gravity="center"
            android:visibility="gone">
                <com.csegsahack.friendinneed.view.TextViewPlus
                    android:id="@+id/noConversationsDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="22dp"
                    android:text="Your friends are in great mental shape. Keep checking back to see if there's anyone you can save from a hard phase!"
                    android:textAlignment="center"
                    android:textColor="@color/light_text"
                    app:font = "fonts/Raleway-Medium.ttf"
                    android:textSize="15sp"
                    android:layout_alignParentBottom="true"/>

                <com.csegsahack.friendinneed.view.TextViewPlus
                    android:id="@+id/noConversationsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_centerHorizontal="true"
                    android:text="Happy Living!"
                    android:textColor="@color/dark_text"
                    android:layout_above="@id/noConversationsDescription"
                    app:font = "fonts/Raleway-Bold.ttf"
                    android:textSize="18sp"
                    />
                <ImageView
                    android:id="@+id/noConversationsImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:paddingLeft="40dp"
                    android:layout_above="@id/noConversationsTitle"/>


        </RelativeLayout>
</RelativeLayout>