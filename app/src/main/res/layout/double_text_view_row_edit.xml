<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.csegsahack.friendinneed.view.TextViewPlus
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:font="fonts/Raleway-SemiBold.ttf"
        android:textColor="@color/dark_text"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/profile_edit_view_text_left_header"
        android:layout_marginRight="@dimen/profile_edit_view_text_right_header"
        android:text="Role Placeholder"
        android:textSize="@dimen/profileViewSubheader" />

    <com.csegsahack.friendinneed.view.TextViewPlus
        android:id="@+id/subheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:textColor="@color/light_text"
        android:text="Company Placeholder"
        android:layout_marginLeft="@dimen/profile_edit_view_text_left_header"
        android:layout_marginRight="@dimen/profile_edit_view_text_right_header"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="12dp"
        android:textSize="@dimen/profileViewSubheader"
        app:font="fonts/Raleway-Medium.ttf" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/subheader"
        android:layout_marginLeft="@dimen/profile_edit_view_text_left_header"
        android:background="@color/light_divider"/>

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_x"
        android:id="@+id/delete_work_exp"
        style="@style/ButtonBorderless"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:foregroundGravity="center"
        android:scaleType="center"/>


</RelativeLayout>