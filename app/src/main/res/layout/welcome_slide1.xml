<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <com.csegsahack.friendinneed.view.TextViewPlus
    android:id="@+id/walkthroughDescriptionText"
    style="@style/WalkthroughDescription"
    android:layout_width="wrap_content"
    android:layout_height="100dp"
    android:layout_marginTop="22dp"
    android:textSize="30dp"
    android:textColor="@color/accent"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:text="Where only positivity flows!"
    android:textAlignment="center"/>

  <com.csegsahack.friendinneed.view.TextViewPlus
    android:id="@+id/walkthroughDescriptionTitle"
    style="@style/WalkthroughTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_gravity="center"
    android:layout_marginTop="100dp"
    android:textColor="@color/primary"
    android:text="A Friend in Need"
    android:textSize="60dp"
    />

</RelativeLayout>
